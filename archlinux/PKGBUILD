# Maintainer: Kohei Suzuki <eagletmt@gmail.com>
pkgname=fastladder-pixiv
pkgver=0.1.2
pkgrel=1
arch=('i686' 'x86_64')
url='https://github.com/eagletmt/fastladder-pixiv'
license=('MIT')
depends=('openssl')
makedepends=('cargo')
source=("https://github.com/eagletmt/$pkgname/archive/v$pkgver.tar.gz")

build() {
  cd "$pkgname-$pkgver"
  cargo build --release --locked
}
package() {
  cd "$pkgname-$pkgver"
  mkdir -p "$pkgdir/usr/bin"
  install -m755 target/release/$pkgname "$pkgdir/usr/bin/"
}

sha512sums=('a51ae5df9a41590fb292c9bce24f33f0acf65c58ad08d58649cb2c84765f455c9cb0b280d29328a93f4064bdf7a5e2341db8ae5d39e2b92e39756e77f4e537a3')
